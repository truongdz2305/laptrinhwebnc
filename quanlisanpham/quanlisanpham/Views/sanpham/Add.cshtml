@model QuanLySanPham.Models.SanPham

<h2>Thêm Sản Phẩm</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Tên Sản Phẩm:</label>
        <input asp-for="TenSanPham" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Giá:</label>
        <input asp-for="Gia" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Chọn Ảnh:</label>
        <input type="file" asp-for="FileAnh" class="form-control" accept="image/*" />
    </div>

    <div class="form-group">
        <label>Mô Tả:</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
</form>
